---
import MapPicker from './MapPicker.astro'
---

<!-- Location Modal -->
<div
  id="location-modal"
  class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 items-center justify-center p-4"
>
  <div class="bg-white rounded-lg shadow-xl max-w-4xl w-full max-h-[90vh] flex flex-col">
    <!-- Modal Header -->
    <div class="flex items-center justify-between p-4 border-b border-gray-200">
      <h3 class="text-xl font-semibold text-gray-900">Selecciona tu ubicación</h3>
      <button
        type="button"
        id="close-modal-btn"
        class="text-gray-400 hover:text-gray-600 transition-colors"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Modal Body -->
    <div class="flex-1 overflow-hidden">
      <MapPicker />
    </div>

    <!-- Modal Footer -->
    <div class="p-4 border-t border-gray-200 flex justify-end gap-3">
      <button
        type="button"
        id="cancel-location-btn"
        class="px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg font-medium transition-colors"
      >
        Cancelar
      </button>
      <button
        type="button"
        id="confirm-location-btn"
        class="px-6 py-2 bg-action hover:bg-action-dark text-white rounded-lg font-medium transition-colors"
      >
        Confirmar ubicación
      </button>
    </div>
  </div>
</div>

<script>
  const modal = document.getElementById('location-modal') as HTMLDivElement
  const closeModalBtn = document.getElementById('close-modal-btn') as HTMLButtonElement
  const cancelLocationBtn = document.getElementById('cancel-location-btn') as HTMLButtonElement
  const confirmLocationBtn = document.getElementById('confirm-location-btn') as HTMLButtonElement

  // Close modal function
  const closeModal = () => {
    modal?.classList.add('hidden')
    modal?.classList.remove('flex')
  }

  // Open modal function (exposed globally)
  function openModal() {
    const modal = document.getElementById('location-modal')
    if (modal) {
      modal.classList.remove('hidden')
      modal.classList.add('flex')

      // Dispatch event to initialize map
      const mapContainer = modal.querySelector('.map-picker-container')
      if (mapContainer) {
        mapContainer.dispatchEvent(new CustomEvent('modal-opened'))
      }
    }
  }

  // Attach to window for external access
  if (typeof window !== 'undefined') {
    ;(window as any).openLocationModal = openModal
    ;(window as any).closeLocationModal = closeModal
  }

  // Close modal handlers
  closeModalBtn?.addEventListener('click', closeModal)
  cancelLocationBtn?.addEventListener('click', closeModal)

  // Close on backdrop click
  modal?.addEventListener('click', e => {
    if (e.target === modal) {
      closeModal()
    }
  })

  // Confirm location
  confirmLocationBtn?.addEventListener('click', () => {
    closeModal()
    // Dispatch custom event for location confirmation
    window.dispatchEvent(new CustomEvent('location-confirmed'))
  })

  // Close on Escape key
  document.addEventListener('keydown', e => {
    if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
      closeModal()
    }
  })
</script>
