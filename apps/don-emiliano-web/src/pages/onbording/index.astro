---
import MapPicker from '@/components/MapPicker.astro'
import OnbordingForm from '@/components/OnbordingForm.astro'
import Layout from '@/layouts/Layout.astro'
---

<Layout title="Onbording">
  <main class="min-h-screen pt-20">
    <div class="container mx-auto px-4 py-8">
      <div class="grid grid-cols-1 md:grid-cols-[400px_auto] gap-8 min-h-225">
        <!-- Formulario - Lado Izquierdo -->
        <div class="flex">
          <OnbordingForm />
        </div>

        <!-- Mapa - Lado Derecho -->
        <MapPicker />
      </div>
    </div>
  </main>
</Layout>
